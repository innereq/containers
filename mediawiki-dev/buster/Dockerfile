FROM debian:buster-slim

# Locale generation, auto generated by installing 'locales'
# Plus install of some baseline packages, notably including APT's HTTPS
# transport.
RUN echo "en_US.UTF-8 UTF-8" > /etc/locale.gen

RUN apt-get update && apt-get upgrade -y && apt-get install -y \
    apt-transport-https ca-certificates git zip unzip locales \
    default-mysql-client curl iputils-ping